<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sethi.gurdane.duskbladetracker.BrowseFragment">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btSearch"
        android:hint="Enter a spell name..."
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="10dp"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/etSearch"
        android:layout_alignBottom="@+id/etSearch"
        android:layout_toStartOf="@+id/ibAdvancedSearch"
        android:backgroundTint="@color/colorAccent"
        android:text="Search"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:id="@+id/ibAdvancedSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/etSearch"
        android:layout_alignBottom="@+id/etSearch"
        android:src="@drawable/ic_mode_edit_black_24dp"/>

    <LinearLayout
        android:id="@+id/llLevelButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSearch"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/bLevel0"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/level_badge"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bLevel1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/level_badge"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bLevel2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/level_badge"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bLevel3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/level_badge"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bLevel4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/level_badge"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bLevel5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:background="@drawable/level_badge"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/sortLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llLevelButtons"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sortLine"
        android:layout_above="@+id/tvSpellsShown"/>

    <TextView
        android:id="@+id/tvSpellsShown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="Showing X of Y results"/>


</RelativeLayout>
