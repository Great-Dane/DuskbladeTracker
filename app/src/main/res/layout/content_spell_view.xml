<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_spell_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sethi.gurdane.warbladetracker.SpellViewActivity"
    tools:showIn="@layout/activity_spell_view">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Spell"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title" />
    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tvName"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLine"
        android:layout_above="@+id/btClose">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSchool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="right"
                    android:text="School (Subschool) (Descriptors) "
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvComponents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Components: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvCastingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casting Time: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Range: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effect: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvSavingThrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saving Throw: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

            <TextView
                android:id="@+id/tvSpellResistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spell Resistance: "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
            <WebView
                android:id="@+id/wv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="0dp"
                android:padding="0dp" />

            <TextView
                android:id="@+id/tvRulebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source: Rulebook"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorAccent"
        android:text="Close"
        android:textColor="@android:color/background_light" />


</RelativeLayout>
