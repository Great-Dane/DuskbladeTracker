<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sethi.gurdane.duskbladetracker.KnownFragment">

    <TextView
        android:id="@+id/tvSortingBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ibAdvancedSearch"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_toStartOf="@+id/ibAdvancedSearch"
        android:text="Sorting: Level (Ascending)"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <ImageButton
        android:id="@+id/ibSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_mode_edit_black_24dp"/>

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvSortingBy"/>

</RelativeLayout>
