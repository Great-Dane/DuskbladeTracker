<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_spell_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">

    <TextView
        android:id="@+id/levelBadge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@drawable/level_badge"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lSpellName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/levelBadge"
        android:text="Spell Name"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

    <TextView
        android:id="@+id/lSpellSchool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lSpellName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/levelBadge"
        android:text="School [subschool]"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lSpellSchool"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp" />

</RelativeLayout>
